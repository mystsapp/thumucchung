@model thumucchung.Models.EF.user

@{
                /**/

                ViewBag.Title = "capnhatUser";
                //Layout = "~/Views/Shared/_Layout.cshtml";
                Layout = null;
}
<script src="~/Asset/js/capnhatUserControl.js"></script>

@using (Html.BeginForm("capnhatUser","Account",FormMethod.Post,new { @id="frmCapnhatUser" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Cập nhật nhân viên</legend>
        <div class="form-group row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-4">
                Tên đăng nhập:
                @Html.TextBoxFor(model => model.username, new { @class = "form-control", @id = "txtusername_", @readonly = "readonly" })
            </div>

            <div class="col-md-4">
                Mật khẩu:
                @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                Khối/ phòng:
                @Html.DropDownListFor(model => model.phongban, null, new { @class = "form-control", @id = "ddphongban_" })
                @Html.ValidationMessageFor(model => model.phongban, "", new { @class = "text-danger" })
            </div>
            <div class="clearfix"></div>
            <div class="col-md-6">
                Họ tên:
                @Html.TextBoxFor(model => model.fullName, new { @class = "form-control text-uppercase", @id = "txtHoten_" })
                @Html.ValidationMessageFor(model => model.fullName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                Hiển thị thư mục:
                @Html.DropDownListFor(model => model.show, (IEnumerable<SelectListItem>)ViewBag.truycap, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                Upload File:
                @Html.DropDownListFor(model => model.upload, null, new { @class = "form-control" })
            </div>
            <div class="clearfix"></div>
            <div class="col-md-3">
                Chi nhánh:
                @Html.DropDownListFor(model => model.chinhanh, null, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                Đổi mật khẩu?
                @Html.DropDownListFor(model => model.doimk, null, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                Khách đoàn:
                @Html.DropDownListFor(model => model.adminkd, null, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                Khách lẽ:
                @Html.DropDownListFor(model => model.adminkl, null, new { @class = "form-control" })
            </div>
            <div class="col-md-2">
                Trạng thái:
                @Html.DropDownListFor(model => model.trangthai, null, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                Email:
                @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-5">
                Đường dẫn thư mục:
                @Html.TextBoxFor(model => model.dirPathName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.dirPathName, "", new { @class = "text-danger" })
            </div>


            <div class="col-md-3">
                Quyền hạn:
                @Html.DropDownListFor(model => model.role, (IEnumerable<SelectListItem>)ViewBag.quyen, new { @class = "form-control" })
            </div>

            <br /><br />

            <div class="col-md-12">
                <input type="button" id="btCapnhatUser" value="Đồng ý" class="btn btn-primary" />
                <a class="btn btn-primary" href="/Account">Hủy</a>
            </div>

        </div>
    </fieldset>


}

