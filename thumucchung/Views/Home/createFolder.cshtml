
@using (Html.BeginForm("createFolder", "Home", FormMethod.Post, new { enctype = "multipart/form-data",@id="frmCreateFolder" }))
{
    <div id="createFolderModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Tạo thư mục</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <label> @ViewBag.home</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                          
                            <input type="text" name="foldername" id="txtFolder" class="form-control" maxlength="20" />
                           
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                     <button type="button" id="btAddFolder" class="btn btn-primary"><i class="fa fa-plus-square"></i> </button>
                     <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-power-off"></i></button>
                </div>
                </div>
        </div>
    </div>
}
<!-- Modal -->
