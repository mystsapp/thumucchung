
@using (Html.BeginForm("uploadFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="upfileModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Upload File</h4>
                </div>
                <div class="modal-body">                    

                    <br />
                    <label>Chọn nhiều file</label><br />
                    <input type="file" name="uploadFile" multiple="multiple"  />
                    <br />                    
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-upload"></i> </button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-power-off"></i></button>
                </div>
            </div>
        </div>
    </div>
}
    <!-- Modal -->
